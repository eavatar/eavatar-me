{
  "DEBUG": false,

  "WEBFRONT": {
    "listen_port": 5080,
    "listen_addr": "0.0.0.0",
    "secure_listen_addr": "0.0.0.0",
    "secure_listen_port": 5443
  },

  "LOGGING": {
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "simple": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "simple"
      },
      "file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "INFO",
        "formatter": "simple",
        "filename": "${logs_dir}/ava.log",
        "maxBytes": 1048576,
        "backupCount": 2,
        "encoding": "utf8"
      }
    },
    "loggers": {
      "ava": {
        "level": "DEBUG",
        "handlers": [
          "console",
          "file_handler"
        ],
        "propagate": "no"
      },
      "avashell": {
        "level": "DEBUG",
        "handlers": [
          "console",
          "file_handler"
        ],
        "propagate": "no"
      },
      "root": {
        "level": "DEBUG",
        "handlers": [
          "console"
        ]
      }
    }
  }
}
